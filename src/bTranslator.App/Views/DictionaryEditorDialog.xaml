<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="bTranslator.App.Views.DictionaryEditorDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="using:bTranslator.App.ViewModels"
    DefaultButton="Primary"
    PrimaryButtonClick="OnPrimaryButtonClick"
    mc:Ignorable="d">
    <Grid
        MinHeight="620"
        MinWidth="980"
        RowSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid ColumnSpacing="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1.1*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBox
                Header="{Binding Ui.DictionaryEditorSearchHeaderText}"
                PlaceholderText="{Binding Ui.DictionaryEditorSearchPlaceholderText}"
                Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <ComboBox
                Grid.Column="1"
                DisplayMemberPath="DisplayName"
                Header="{Binding Ui.DictionaryEditorSortHeaderText}"
                ItemsSource="{Binding SortOptions}"
                SelectedItem="{Binding SelectedSortOption, Mode=TwoWay}" />
            <TextBlock
                Grid.Column="2"
                Margin="10,28,0,0"
                FontFamily="Cascadia Mono"
                Opacity="0.78"
                Text="{Binding EntryCountText}" />
        </Grid>

        <Grid
            Grid.Row="1"
            ColumnSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.8*" />
                <ColumnDefinition Width="1.2*" />
            </Grid.ColumnDefinitions>

            <Border
                Grid.Column="0"
                Background="Transparent"
                BorderBrush="{StaticResource VsCodeBorderBrush}"
                BorderThickness="1"
                CornerRadius="0"
                Padding="6">
                <ListView
                    ItemsSource="{Binding FilteredEntries}"
                    SelectedItem="{Binding SelectedEntry, Mode=TwoWay}">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="viewModels:DictionaryEditorEntryViewModel">
                            <Border
                                Background="Transparent"
                                BorderBrush="{StaticResource VsCodeBorderBrush}"
                                BorderThickness="0,0,0,1"
                                Padding="6,5">
                                <Grid RowSpacing="2">
                                    <TextBlock
                                        FontFamily="Cascadia Mono"
                                        FontSize="12"
                                        Text="{Binding Source}" />
                                    <TextBlock
                                        Grid.Row="1"
                                        FontSize="12"
                                        Text="{Binding Target}" />
                                    <TextBlock
                                        Grid.Row="2"
                                        FontSize="11"
                                        Opacity="0.74"
                                        TextTrimming="CharacterEllipsis">
                                        <Run Text="{Binding ScopeDisplay}" />
                                        <Run Text=" | " />
                                        <Run Text="{Binding FlagsDisplay}" />
                                    </TextBlock>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Border>

            <Border
                Grid.Column="1"
                Background="Transparent"
                BorderBrush="{StaticResource VsCodeBorderBrush}"
                BorderThickness="1"
                CornerRadius="0"
                Padding="10">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Spacing="8">
                        <TextBox
                            Header="{Binding Ui.DictionaryEditorSourceHeaderText}"
                            Text="{Binding SelectedEntry.Source, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBox
                            Header="{Binding Ui.DictionaryEditorTargetHeaderText}"
                            Text="{Binding SelectedEntry.Target, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBox
                            Header="{Binding Ui.DictionaryEditorEditorIdScopeHeaderText}"
                            PlaceholderText="*"
                            Text="{Binding SelectedEntry.EditorIdPattern, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBox
                            Header="{Binding Ui.DictionaryEditorFieldScopeHeaderText}"
                            PlaceholderText="*"
                            Text="{Binding SelectedEntry.FieldPattern, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <Grid ColumnSpacing="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <ToggleSwitch
                                Header="{Binding Ui.DictionaryEditorMatchCaseHeaderText}"
                                IsOn="{Binding SelectedEntry.MatchCase, Mode=TwoWay}" />
                            <ToggleSwitch
                                Grid.Column="1"
                                Header="{Binding Ui.DictionaryEditorWholeWordHeaderText}"
                                IsOn="{Binding SelectedEntry.WholeWord, Mode=TwoWay}" />
                        </Grid>
                        <TextBlock
                            Opacity="0.72"
                            Text="{Binding Ui.DictionaryEditorScopePreviewHeaderText}" />
                        <TextBlock
                            FontFamily="Cascadia Mono"
                            Text="{Binding ScopePreviewText}" />
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Right"
            Orientation="Horizontal"
            Spacing="8">
            <Button
                Click="OnPasteDelimitedClicked"
                Content="{Binding Ui.DictionaryEditorPasteButtonContent}"
                Style="{StaticResource SecondaryAction}" />
            <Button
                Click="OnAddEntryClicked"
                Content="{Binding Ui.DictionaryEditorAddButtonContent}"
                Style="{StaticResource SecondaryAction}" />
            <Button
                Click="OnDuplicateEntryClicked"
                Content="{Binding Ui.DictionaryEditorDuplicateButtonContent}"
                Style="{StaticResource SubtleAction}" />
            <Button
                Click="OnDeleteEntryClicked"
                Content="{Binding Ui.DictionaryEditorDeleteButtonContent}"
                Style="{StaticResource SubtleAction}" />
        </StackPanel>
    </Grid>
</ContentDialog>
