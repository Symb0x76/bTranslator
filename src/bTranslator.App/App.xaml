<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="bTranslator.App.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>

            <SolidColorBrush
                x:Key="VsCodeBackgroundBrush"
                Color="#1E1E1E" />
            <SolidColorBrush
                x:Key="VsCodeSurfaceBrush"
                Color="#252526" />
            <SolidColorBrush
                x:Key="VsCodeSurfaceAltBrush"
                Color="#2D2D30" />
            <SolidColorBrush
                x:Key="VsCodeBorderBrush"
                Color="#3C3C3C" />
            <SolidColorBrush
                x:Key="VsCodeTextBrush"
                Color="#CCCCCC" />
            <SolidColorBrush
                x:Key="VsCodeSubtleTextBrush"
                Color="#9D9D9D" />
            <SolidColorBrush
                x:Key="VsCodeAccentBrush"
                Color="#0E639C" />
            <SolidColorBrush
                x:Key="VsCodeAccentHoverBrush"
                Color="#1177BB" />

            <Style x:Key="PanelCardBorderStyle" TargetType="Border">
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="BorderBrush" Value="{StaticResource VsCodeBorderBrush}" />
                <Setter Property="BorderThickness" Value="0,1,0,0" />
                <Setter Property="CornerRadius" Value="0" />
                <Setter Property="Padding" Value="8" />
            </Style>

            <Style x:Key="ActionButtonStyle" TargetType="Button">
                <Setter Property="CornerRadius" Value="0" />
                <Setter Property="FontFamily" Value="Segoe UI Variable Text" />
                <Setter Property="FontSize" Value="12" />
                <Setter Property="Padding" Value="12,6" />
                <Setter Property="MinHeight" Value="30" />
                <Setter Property="MinWidth" Value="72" />
            </Style>

            <Style
                x:Key="PrimaryAction"
                BasedOn="{StaticResource ActionButtonStyle}"
                TargetType="Button">
                <Setter Property="Background" Value="{StaticResource VsCodeAccentBrush}" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="FontWeight" Value="SemiBold" />
            </Style>

            <Style
                x:Key="SecondaryAction"
                BasedOn="{StaticResource ActionButtonStyle}"
                TargetType="Button">
                <Setter Property="Background" Value="{StaticResource VsCodeSurfaceAltBrush}" />
                <Setter Property="Foreground" Value="{StaticResource VsCodeTextBrush}" />
            </Style>

            <Style
                x:Key="SubtleAction"
                BasedOn="{StaticResource ActionButtonStyle}"
                TargetType="Button">
                <Setter Property="Background" Value="{StaticResource VsCodeSurfaceAltBrush}" />
                <Setter Property="Foreground" Value="{StaticResource VsCodeTextBrush}" />
            </Style>

            <Style x:Key="MetricLabelTextStyle" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Segoe UI Variable Text" />
                <Setter Property="FontSize" Value="11" />
                <Setter Property="Foreground" Value="{StaticResource VsCodeSubtleTextBrush}" />
            </Style>

            <Style x:Key="MetricValueTextStyle" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Segoe UI Variable Text Semibold" />
                <Setter Property="FontSize" Value="24" />
                <Setter Property="LineHeight" Value="28" />
                <Setter Property="Foreground" Value="{StaticResource VsCodeTextBrush}" />
            </Style>

            <Style x:Key="SectionTitleTextStyle" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Segoe UI Variable Text Semibold" />
                <Setter Property="FontSize" Value="13" />
                <Setter Property="Foreground" Value="{StaticResource VsCodeTextBrush}" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>

